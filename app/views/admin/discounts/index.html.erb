<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <div class="row">
            <div class="col">
              <h1 class="text-center">Discounts</h1>
            </div>
          </div>
        </div>
        <div class="card-body">
        <div class="row">
        <div class="col-lg-8">
            <%= render 'admin/products/search' %>
        </div>
          <div class="col-lg-4 text-end">
            <%= link_to 'Export CSV', export_admin_users_path(format: :csv), class: "btn btn-primary" %>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Value</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @discounts.each do |discount| %>
                  <tr>
                    <td><%= discount.id %></td>
                    <td><%= discount.name %></td>
                    <td><%= discount.value %></td>
                    <td><%= link_to 'Show', admin_discount_path(discount), class: "btn btn-outline-primary" %></td>
                    <td><%= link_to 'Edit', edit_admin_discount_path(discount), class: "btn btn-outline-secondary"  %></td>
                    <td><%= link_to 'Delete', admin_discount_path(discount), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %></td>
                  </tr>
              <% end %>
            </tbody>
          </table>
          <br>
        </div>
          <%= link_to 'New Discount', new_admin_discount_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>


