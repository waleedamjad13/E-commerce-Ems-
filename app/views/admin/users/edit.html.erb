<h1>Edit User</h1>

<%= form_for(@user, url: admin_user_path(@user), method: :patch) do |f| %>
  <div>
    <%= f.label :firstname %>
    <%= f.text_field :firstname %>
  </div>

  <div>
    <%= f.label :lastname %>
    <%= f.text_field :lastname %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.submit "Update User" %>
  </div>
<% end %>
