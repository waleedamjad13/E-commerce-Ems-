
Logged in as:<%= current_user&.email %>
<% if policy(:users).index? %>

  <h1>Users</h1>
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <% if !user.admin? %>
        <tr>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', admin_user_path(user) %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user)  %></td>
          <td><%= link_to 'Delete', admin_user_path(user), method: :delete  %></td>

        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>
<%== pagy_nav(@pagy) %>

<%= button_to "Logout", destroy_user_session_path, method: :delete %>