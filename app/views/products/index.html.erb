<div class="row">

</div>
<div class="container">

  <% if !current_user.admin? %>
    <div class="text-center">
      <h2>Products</h2>
    </div>
    <div class="row">
      <div class="col-lg-4">
        <%= render 'products/search' %>
      </div>
    </div>
    <div class="row mt-2">
      <% @product_views.each do |product| %>
        <div class="col-md-4">
          <div class="card" style="width: 18rem;">
            <% if product.header_image.attached? %>
              <div class="d-flex justify-content-center">
                <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                  <div class="carousel-inner">
                    <% product.all_images.each_with_index do |item, index| %>
                      <div class="carousel-item <%= 'active' if index.zero? %>">
                        <%= image_tag item, class: "carousel-image" %>
                      </div>
                    <% end %>
                  </div>
                  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                  </button>
                  <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                  </button>
                </div>
              </div>
            <% else %>
              <p>No image available</p>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= product.title %></h5>
              <p class="card-text"><%= product.description %> </p>
              <div class="d-flex justify-content-between">
                <%= button_to "View Details", product_path(product), method: :get, class: "btn btn-primary" %>
              <% unless @current_cart.products.exists?(id: product.id) %>
                <%= button_to "Add to Cart", order_items_path(product_id: product.id), class: "btn btn-primary" %>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="pagy-custom-links">
      <%== pagy_nav(@pagy) %>
    </div>
    <div class="pagy-custom-info">
      <%== pagy_info(@pagy) %>
    </div>
  <% end %>
</div>

